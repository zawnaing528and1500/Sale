@using EventTicket.App_Code;
@using System.Data;
@{
    ViewBag.Title = "ShowUsernamePassword";
    Layout = "~/Views/Shared/StockCentral.cshtml";
    StockBase db = new StockBase();
    int ShopID = Convert.ToInt32(ViewBag.SHopID);
}
<div class="contentBodyBox">
    <i class="fa fa-check-square-o" aria-hidden="true"></i><span class="zg"> <b>@db.getStringByQuery("select * from Shop where ID=" + ShopID, "Name") Branch </b>၏ အခ်က္​အလက္​မွာ ​ေအာက္​ပါအတိုင္​း ျဖစ္​ပါသည္​။</span>
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <td><b>Phone</b></td>
            <td><span class="zg">@db.getStringByQuery("select * from Shop where ID=" + ShopID, "Phone")</span></td>
        </tr>
        <tr>
            <td><b>Address</b></td>
            <td><span class="zg">@db.getStringByQuery("select * from Shop where ID=" + ShopID, "Address")</span></td>
        </tr>
        <tr>
            <td><b>Expiry Date</b></td>
            <td><span class="zg">@db.getStringByQuery("select * from Login where AllID=" + ShopID + " and AccessLevel=3", "ExpiryDate")</span></td>
        </tr>
        <tr>
            <td><b>Username</b></td>
            <td><span class="zg">@db.getStringByQuery("select * from Login where AllID=" + ShopID + " and AccessLevel=3", "Username")</span></td>
        </tr>
        <tr>
            <td><b>Password</b></td>
            <td><span class="zg">@db.getStringByQuery("select * from Login where AllID=" + ShopID + " and AccessLevel=3", "Password")</span></td>
        </tr>
    </table>
</div>


